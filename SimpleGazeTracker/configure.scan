#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ([2.69])
AC_INIT([FULL-PACKAGE-NAME], [VERSION], [BUG-REPORT-ADDRESS])
AC_CONFIG_SRCDIR([config.h.in])
AC_CONFIG_HEADERS([config.h])

# Checks for programs.
AC_PROG_CXX
AC_PROG_CC

# Checks for libraries.
# FIXME: Replace `main' with a function in `-lflycapture':
AC_CHECK_LIB([flycapture], [main])
# FIXME: Replace `main' with a function in `-lspinnaker':
AC_CHECK_LIB([spinnaker], [main])

# Checks for header files.
AC_CHECK_HEADERS([arpa/inet.h sys/time.h unistd.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_CHECK_HEADER_STDBOOL
AC_TYPE_MODE_T
AC_TYPE_SIZE_T
AC_TYPE_SSIZE_T
AC_TYPE_UINT16_T

# Checks for library functions.
AC_FUNC_MALLOC
AC_FUNC_STRTOD
AC_CHECK_FUNCS([clock_gettime floor getcwd gettimeofday mkdir pow sqrt strchr strstr strtol])

AC_CONFIG_FILES([makefile])
AC_OUTPUT
